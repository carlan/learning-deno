{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run main.ts",
      "desc": "Run the app",
      "allow": [
        "read",
        "net"
      ],
      "unstable": true,
      "log": "info"
    }
  },
  "watcher": {
    "interval": 2000,
    "exts": ["ts", "html"],
    "match": ["*.*"],
    "skip": ["*/.git/*", "*/.png/*", "*/.jpg/*", "*/.jpeg/*"],
    "legacy": false
  },
  "logger": {
    "fullscreen": false,
    "quiet": false,
    "debug": false
  }
}